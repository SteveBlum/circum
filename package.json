{
  "name": "circum",
  "version": "0.4.0",
  "description": "A simple page which rotates between multiple websites using iframes",
  "main": "index.js",
  "homepage": "https://github.com/SteveBlum/circum",
  "scripts": {
    "prebuild": "node -p \"JSON.stringify(require('./package.json').version).replace(/\\\"/g, '')\" > src/views/partials/Version.html",
    "build": "npm run build:webpack",
    "build:transpile": "tsc --build",
    "build:webpack": "webpack --config webpack.prod.js",
    "cypress:runtask": "wait-on http://localhost:8080 && cypress run",
    "cypress:run": "run-p --race start:dev cypress:runtask",
    "cypress:opentask": "cypress open",
    "cypress:open": "run-p --race start:dev cypress:opentask",
    "eslint": "eslint --format html --output-file ./reports/eslint-report.html .",
    "eslint:fix": "eslint --format html --output-file ./reports/eslint-report.html --fix .",
    "weather:generateClientWeb": "openapi-generator-cli generate -i https://raw.githubusercontent.com/open-meteo/open-meteo/main/openapi.yml -g typescript -o ./src/controller/frames/weather/open-meteo-client",
    "weather:generateClientLocal": "openapi-generator-cli generate -i ./src/controller/frames/weather/openapi.json -g typescript -o ./src/controller/frames/weather/open-meteo-client",
    "start": "npm run prebuild && webpack serve --config webpack.prod.js",
    "start:dev": "npm run prebuild && webpack serve --config webpack.dev.js",
    "test": "jest --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Steve Blum",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@types/bootstrap": "^5.2.10",
    "@types/jest": "^29.5.11",
    "@types/request": "^2.48.12",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.15.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "cypress": "^13.6.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "html-bundler-webpack-plugin": "^3.4.2",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "mochawesome": "^7.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.2",
    "whatwg-fetch": "^3.6.19"
  }
}
