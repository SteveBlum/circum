{
  "name": "circum",
  "version": "1.0.0",
  "description": "A simple page which rotates between multiple websites using iframes",
  "main": "index.js",
  "homepage": "https://github.com/SteveBlum/circum",
  "scripts": {
    "prebuild": "node -p \"JSON.stringify(require('./package.json').version).replace(/\\\"/g, '')\" > src/views/partials/Version.html",
    "build": "npm run build:webpack",
    "build:transpile": "tsc --build",
    "build:webpack": "webpack --config webpack.prod.js",
    "cypress:runtask": "wait-on http://localhost:8080 && cypress run",
    "cypress:run": "run-p --race start:dev cypress:runtask",
    "cypress:opentask": "cypress open",
    "cypress:open": "run-p --race start:dev cypress:opentask",
    "eslint": "eslint --format html --output-file ./reports/eslint-report.html .",
    "eslint:fix": "eslint --format html --output-file ./reports/eslint-report.html --fix .",
    "weather:generateClientWeb": "openapi-generator-cli generate -i https://raw.githubusercontent.com/open-meteo/open-meteo/main/openapi.yml -g typescript -o ./src/controller/frames/weather/open-meteo-client",
    "weather:generateClientLocal": "openapi-generator-cli generate -i ./src/controller/frames/weather/openapi.yml -g typescript -o ./src/controller/frames/weather/open-meteo-client",
    "start": "npm run prebuild && webpack serve --config webpack.prod.js",
    "start:dev": "npm run prebuild && webpack serve --config webpack.dev.js",
    "test": "jest --coverage",
    "test:watch": "npm run test -- --watch",
    "typedoc": "typedoc --options ./typedoc.js"
  },
  "author": "Steve Blum",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@openapitools/openapi-generator-cli": "^2.15.3",
    "@types/bootstrap": "^5.2.10",
    "@types/jest": "^29.5.14",
    "@types/request": "^2.48.12",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "cypress": "^13.16.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^50.6.1",
    "eslint-plugin-prettier": "^5.2.1",
    "html-bundler-webpack-plugin": "^4.10.3",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "mochawesome": "^7.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "sass": "^1.83.0",
    "sass-loader": "^16.0.4",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "8.18.1",
    "wait-on": "^8.0.1",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0",
    "webpack-merge": "^6.0.1",
    "workbox-webpack-plugin": "^7.3.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "whatwg-fetch": "^3.6.20"
  }
}
