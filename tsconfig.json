{
    "compilerOptions": {
        "composite": true,
        "target": "es2015",
        "module": "nodeNext",
        "isolatedModules": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "nodeNext",
        "outDir": "dist",
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts", "src/**/*.json"],
    "exclude": ["node_modules/**/*", ".webpack/**/*", ".vscode/**/*"]
}
